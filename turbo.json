{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "SERVER_PORT",
    "DB_URL",
    "NODE_ENV",
    "EMAIL_HOST",
    "EMAIL_USER",
    "EMAIL_PASSWORD",
    "EMAIL_SECURE",
    "EMAIL_PORT",
    "ACCESS_TOKEN_PUBLIC",
    "ACCESS_TOKEN_PRIVATE",
    "REFRESH_TOKEN_PUBLIC",
    "REFRESH_TOKEN_PRIVATE"
  ],
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test-build": {},
    "test-start": {},
    "test": {},
    "test:start": {},
    "test:watch": {
      "cache": false
    },
    "coverage": {}
  }
}
