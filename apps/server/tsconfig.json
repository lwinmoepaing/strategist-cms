{
  "extends": "@strategist-cms/typescript-config/backend.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "types": ["jest", "node"],
    "paths": {
      "./*": ["./*"]
    }
  },
  "include": [
    "./server.ts",
    "./features/**/*.ts",
    "./api/**/*.ts",
    "./util/**/*.ts",
    "./lib/**/*.ts",
    "./api/**/*.ts",
    "./__tests__/**/*.ts",
    "jest.config.js"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
